    <script>
      var scrollDownTarget = document.getElementById('belowTheFold');
      var scrollDownObserver = new IntersectionObserver(function (entries) {
        if (entries[0].isIntersecting) {
          var chevronDown = document.getElementById("chevronDown");
          chevronDown.classList.add("hidden");

          var chevronUp = document.getElementById("chevronUp");
          chevronUp.classList.remove("hidden");
        }
      }, {
        rootMargin: '0px',
        threshold: 0.5,
      });
      scrollDownObserver.observe(scrollDownTarget);

      var scrollUpTarget = document.getElementById('aboveTheFold');
      var scrollUpObserver = new IntersectionObserver(function (entries) {
        if (entries[0].isIntersecting) {
          var chevronDown = document.getElementById("chevronDown");
          chevronDown.classList.remove("hidden");

          var chevronUp = document.getElementById("chevronUp");
          chevronUp.classList.add("hidden");
        }
      }, {
        rootMargin: '0px',
        threshold: 0.5,
      });
      scrollUpObserver.observe(scrollUpTarget);

      var today = new Date();
      var weekdays = [
        "Sunday",
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
      ];

      console.log(`
      Hi ðŸ‘‹. If you're curious how we built this site, we have good news! It's open source! Take a look at
      the site on Github here: https://github.com/smeriwether/locallycurated.com.
      At a high level, it's a static site, with TailwindCSS, served via Nginx on a DigitalOcean droplet.
      Enjoy the rest of your ${weekdays[today.getDay()]}.
      `);
    </script>
